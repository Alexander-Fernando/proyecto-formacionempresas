<div id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        {{> sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- {{> navegacion}} --}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div id="servicio" style="display: block;">
                        <div class="testbox">
                  
                          <form 
                            action="/admin/{{id}}/nuevo-producto" method="POST" enctype="multipart/form-data"
                            class="form-formulario">
                  
                            <div class="banner ">
                              <h1>Producto</h1>
                            </div>
                            
                            <div class="item">
                                <div>
                                  <label for="address">Nombre de su Producto<span>*</span></label>
                                  <input class="input-form" id="address" type="text" name="nombreProduc" required/>
                                </div>
                            </div>
                            <div class="item">
                                <div>
                                  <label for="language">Agregue una breve descripción</label>
                                  <input class="input-form" id="language" type="text" name="descripcionProduc" />
                                </div>
                            </div>
                            <div class="item">
                                <div>
                                  <label for="country">Especificaciones del producto</label>
                                  <input class="input-form" id="country" type="text" name="especificaciones" />
                                </div>
                            </div>
                            <div class="item">
                              <label for="apply">Puntos de venta y/o entrega</label>
                              <input class="input-form" id="apply" type="text" name="lugarDelivery"/>
                            </div>

                            <div class="item">
                                <label for="local">Local de ventas.</label>
                                <input class="input-form" id="local" type="text" name="ubicacion"/>
                              </div>
                            <div class="item">
                              <label for="telefono">Teléfono de contacto</label>
                              <input class="input-form" id="telefono" type="text" name="teleContacto"/>
                            </div>
                  
                            <div class="item">
                              <label for="precio">Precio (Sujeto a cambios)</label>
                              <input class="input-form" id="precio" type="number" name="precioProduc"/>
                            </div>
                            
                            
                            <div class="item">
                              <label for="picture">Agregue una imagen descriptiva de su producto:</label>
                              <input class="input-form" id="picture" type="file" name="imgProducto"/>
                            </div>
                            
                            <div>
                                <button class="btn btn-success"  type="submit">Publicar</button>
                            </div>
                          </form>
                        </div>
                      </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
</div>