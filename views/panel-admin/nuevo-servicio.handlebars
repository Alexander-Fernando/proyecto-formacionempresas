<div id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        {{> sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- {{> navegacion}} --}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div id="servicio" style="display: block;">
                        <div class="testbox">
                  
                          <form action="/admin/{{id}}/nuevo-servicio"
                          method="POST" enctype="multipart/form-data" class="form-formulario">
                  
                            <div class="banner ">
                              <h1>Servicio</h1>
                            </div>
                            
                            <div class="item">
                                <div>
                                  <label for="address">Nombre de su servicio<span>*</span></label>
                                  <input class="input-form" id="address" type="text" name="nombreSer" required/>
                                </div>
                            </div>
                            <div class="item">
                                <div>
                                  <label for="language">Describa su servicio</label>
                                  <input class="input-form" id="language" type="text" name="descripcion" />
                                </div>
                            </div>
                            <div class="item">
                                <div>
                                  <label for="country">Distritos o lugares donde podría ofrecer sus servicio (delivey)</label>
                                  <input class="input-form" id="country" type="text" name="lugarDel" />
                                </div>
                            </div>
                            <div class="item">
                              <label for="apply">Taller o locar donde pueden visitarlo para adquirir sus servicios</label>
                              <input class="input-form" id="apply" type="text" name="lugarFijo"/>
                            </div>
                            <div class="item">
                              <label for="telefono">Teléfono de contacto</label>
                              <input class="input-form" id="telefono" type="text" name="telContacto"/>
                            </div>
                  
                            <div class="item">
                              <label for="precio">Precio (Sujeto a cambios)</label>
                              <input class="input-form" id="precio" type="number" name="precio"/>
                            </div>
                            
                            
                            <div class="item">
                              <label for="picture">Agregue una imagen descriptiva de su servicio:</label>
                              <input class="input-form" id="picture" type="file" name="imgServicio"/>
                            </div>
                            
                            <div>
                                <button type="submit" class="btn btn-success">Publicar</button>
                            </div>
                          </form>
                        </div>
                      </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->



        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
</div>