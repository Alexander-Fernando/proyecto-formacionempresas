
<form action="/editar-perfil/{{id}}" method="POST" enctype="multipart/form-data" class="container">
    <div class="main-body mt-5">
        <div class="row">
            {{> navegacion }}
            <!--TARJETA DE IMAGEN, NOMBRE Y REDES SOCIALES-->
            <div class="col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img 
                                {{#if imagen}}
                                    src="{{imagen}}"
                                {{else}}
                                    src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin"
                                {{/if}}
                                class="rounded-circle p-1 bg-primary" width="110">
                            <div class="mt-3">
                                <h4>{{nombre}}</h4>
                                <p class="text-secondary mb-1">{{carrera}}</p>
                                <p class="text-muted font-size-sm">{{direccion}}</p>
                            </div>
                        </div>
                        <hr class="my-4">
                    <!--SECCIÓN PARA LAS REDES SOCIALES-->
                    <ul class="list-group list-group-flush">

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-globe me-2 icon-inline">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <line x1="2" y1="12" x2="22" y2="12"></line>
                                        <path
                                            d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z">
                                        </path>
                                    </svg>Página Web
                                </h6>
                                <span class="text-secondary">
                                    <input type="text" class="form-control" name="web" value="{{web}}">
                                </span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-github me-2 icon-inline">
                                        <path
                                            d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22">
                                        </path>
                                    </svg>Github
                                </h6>

                                <span class="text-secondary">
                                    <input  
                                        type="text" 
                                        class="form-control"
                                        value="{{github}}"
                                        name="github"
                                    >
                                            
                                </span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-twitter me-2 icon-inline text-info">
                                        <path
                                            d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z">
                                        </path>
                                    </svg>Twitter
                                </h6>
                                <span class="text-secondary">
                                    <input 
                                        type="text" 
                                        class="form-control"
                                        value="{{twitter}}"
                                        name="twitter"
                                    >
                                </span>
                            </li>


                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-instagram me-2 icon-inline text-danger">
                                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                                    </svg>Instagram
                                </h6>
                                <span class="text-secondary">
                                    <input 
                                        type="text" 
                                        class="form-control"
                                        value="{{instagram}}"
                                        name="instagram"
                                    >
                                </span>
                            </li>


                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-facebook me-2 icon-inline text-primary">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z">
                                        </path>
                                    </svg>Facebook
                                </h6>
                                
                                <span class="text-secondary">
                                    <input 
                                        type="text" 
                                        class="form-control"
                                        value="{{facebook}}"
                                        name="facebook"
                                    >
                                </span>
                            </li>
                    </ul>
                        
                    </div>
                </div>
            </div>



            <!--FORMULARIO PARA LOS DATOS, SIN REDES SOCIALES-->
            <div class="col-lg-8 align-self-center">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre y Apellidos:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" 
                                    class="form-control" 
                                    name="nombre"
                                    value="{{nombre}}"
                                >
                            </div>
                        </div>


                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Escuela Profesional:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input 
                                        type="text" 
                                        class="form-control" 
                                        name="carrera" 
                                        value="{{carrera}}"  
                                >
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Teléfono Móvil:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" name="telefonomovil" value="{{telefonomovil}}">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Teléfono fijo:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="telefonofijo" class="form-control" value="{{telefonofijo}}">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dirección:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="direccion" class="form-control" value="{{direccion}}">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Foto de Perfil:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input name="imagen" type="file" class="form-control">
                            </div>
                        </div>


                            <!--BOTÓN PARA ENVIAR EL FORMULARIO-->
                        <div class="row">

                            <div class="col-sm-4 text-secondary">
                                <input type="submit" class="btn btn-primary px-4" value="Guardar Cambios">
                            </div>

                            <div class="col-sm-4"></div>
                            <div class="col-sm-4 text-secondary">
                                <a href="/" class="btn btn-danger px-4">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            

            <!--SECCIÓN PARA LOS PRODUCTOS DESTACADOS EN EL PERFIL-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="d-flex align-items-center mb-3">Principales Productos</h5>
                            <ul class="widget-products">
                                <li>
                                    <a href="#">
                                        <span class="img">
                                            <img class="img-thumbnail"
                                                        src="https://via.placeholder.com/400x400/ADD8E6/000000" alt="">
                                        </span>

                                        <span class="product clearfix">
                                            <span class="name">
                                                Pasteles de chocolate
                                            </span>
                                            <span class="price">
                                                <i class="fa fa-money"></i> s/32.00
                                            </span>
                                            <span class="warranty">
                                                <i class="fa fa-certificate"></i> Delicioso
                                            </span>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#">
                                        <span class="img">
                                            <img class="img-thumbnail"
                                                src="https://via.placeholder.com/400x400/FFB6C1/000000" alt="">
                                        </span>
                                        <span class="product clearfix">
                                            <span class="name">
                                                        Pie de limón
                                                    </span>
                                                    <span class="price">
                                                        <i class="fa fa-money"></i> S/15.00
                                                    </span>
                                                    <span class="warranty">
                                                        <i class="fa fa-certificate"></i> Excelente
                                                    </span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
    {{> footer }}


