<div class="card1 p-4 mt-3">
    {{> navegacion }}
    <h3 class="heading mt-4 text-center titulo">Servicios | EmprendeSM</h3>

    <div class="d-flex justify-content-center px-4">
        <div class="search"> <input type="text" class="search-input" placeholder="Buscar..." name=""> <a href="#" class="search-icon"> <i class="fa fa-search"></i> </a> </div>
    </div>
    <div class="row mt-4 g-1 px-4 mb-2">
        <div class="col-md-6">
            <div class="card-inner p-3 d-flex flex-column align-items-center"> <img src="https://i.imgur.com/D0Sm15i.png" width="50">
                <div class="text-center mg-text"> 
                  <a href="/productos">
                    <span class="mg-text">Productos</span> 
                  </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-inner p-3 d-flex flex-column align-items-center"> <img src="https://i.imgur.com/Z7BJ8Po.png" width="50">
                <div class="text-center mg-text"> <span class="mg-text">Servicios</span> </div>
            </div>
        </div>
    </div>

    <div class="container">

      {{#if serviciosTotal.length }}

        {{#each serviciosTotal }}
        <div class="card">
          <div class="imgBx">
            {{#if imgServicio}}
             <img src="{{imgServicio}}">
            {{else}}
              <img src="/img/1.jpg">
            {{/if}}
            <u1 class="action">
                <li>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                    <span>Añadir a deseos</span>
                </li>
                <li>
                  <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                  <span>Añadir al carrito</span>
                </li>
                <li>
                  <i class="fa fa-eye" aria-hidden="true"></i>
                  <span>Ver detalles</span>  
                </li>
            </u1>  
          </div>
          <div class="content">
              <div class="productName">
                <h3>{{nombreSer}}</h3>
              </div>
              <div class="price_rating">
                <h2>S/{{precio}}</h2>
              </div> 
              <a href="/servicios/{{url}}">Más info</a>
          </div>
        </div> 

        {{/each}}

      {{else}}
        <p>NO EXISTEN SERVICIOS A SU DISPOSICIÓN</p>
      {{/if}}
    </div>
</div>