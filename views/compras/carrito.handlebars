<!-- AQUI TERMINA ESO Y EMPIEZA LO DEL CARRITO DE COMPRAS -->
<div class="container padding-bottom-3x mb-1 mt-5">
  <!-- Shopping Cart-->

  <div class="table-responsive shopping-cart" id="carrito">

    <table class="table" id="lista-carrito">
      <thead>
        <tr>
          <th class="text-center">Nombre</th>
          <th class="text-center">Cantidad</th>
          <th class="text-center">Subtotal</th>
          <th class="text-center">
            <a class="btn btn-sm btn-outline-danger btn-vaciar" href="#">
              Limpiar Carrito
            </a>
          </th>
        </tr>
      </thead>

      <tbody>

      </tbody>

    </table>
  </div>

  <div class="shopping-cart-footer">
    <div class="column text-lg">Subtotal:
      <span class="text-medium">S/: <span id="totalPago"></span></span></div>
  </div>
  <div class="shopping-cart-footer">
    <div class="column">
      <a class="btn btn-outline-secondary" href="/">
        <i class="icon-arrow-left">
        </i>&nbsp;Volver a Tienda
      </a>
    </div>

    <div class="column">
      <button
        type="button"
        class="btn btn-success comprarButton"
        data-toggle="modal"
        data-target="#comprarModal"
      >Pagar</button>
    </div>

    <!-- START MODAL COMPRA -->
    <div
      class="modal fade"
      id="comprarModal"
      tabindex="-1"
      aria-labelledby="comprarModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="comprarModalLabel">
              Datos para la compra
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="payment-form">
              <div class="form-group">
                <label for="email-element">Correo</label>
                <input
                  type="email"
                  class="form-control"
                  id="email-element"
                  aria-describedby="emailHelp"
                  placeholder="example@example.com"
                  autocomplete="email"
                />
              </div>

              <div class="form-group">
                <div
                  id="card-element"
                  class="form-control"
                  style="height: 2.4em; padding-top: 2em margin-top: 1.5 em"
                >
    
                </div>
              </div>


              <button id="submit" class="btn btn-primary mt-4 w-100">
                <div
                  class="spinner-border text-light hidden"
                  id="spinner"
                  role="status"
                >
                  <span class="sr-only">Cargando...</span>
                </div>
                <span id="button-text">Pagar</span>
              </button>


              <p id="card-error" role="alert"></p>
              <p class="result-message hidden">
                Pago satisfactorio âœ… Gracias por su compra!
              </p>
            </form>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- END MODAL COMPRA -->
  </div>
</div>
